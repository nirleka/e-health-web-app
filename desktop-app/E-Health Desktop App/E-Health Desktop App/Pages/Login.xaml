<UserControl x:Class="E_Health_Desktop_App.Pages.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" x:Name="LoginPage">
    
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer Padding="90">
            <StackPanel>
                <TextBlock Text="Login E-Health Desktop App" Style="{StaticResource Heading1}" Margin="0,30,0,0"/>

                <TextBlock Text="Username" Style="{StaticResource Heading2}" Margin="0,40,0,0"/>
                <TextBox Name="username" KeyDown="enter_KeyDown"/>

                <TextBlock Text="Password" Style="{StaticResource Heading2}" Margin="0,20,0,0"/>
                <PasswordBox Password="" Name="password" KeyDown="enter_KeyDown"/>

                <Button Content="Login" Width="75" HorizontalAlignment="Right" Name="LoginBTN" Click="LoginBTN_Click" Margin="0,20,0,0">
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
